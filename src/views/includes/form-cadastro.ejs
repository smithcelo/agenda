<div class="container" style="height: 100vh; display: flex; align-items: center; margin-left: 0px;">
    <div class="row justify-content-center w-100">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-body">
            <form action="/register/login" method="POST">
              <h3 class="text-center">Login</h3>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  
              <div class="form-group">
                <label>Nome</label>
                <input type="text" class="form-control" name="name" placeholder="Enter name">
              </div>
  
              <div class="form-group">
                <label>CPF</label>
                <input type="text" class="form-control" name="cpf" placeholder="Enter CPF">
              </div>
  
              <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email" placeholder="Enter email">
              </div>
  
              <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" name="password" placeholder="Enter password">
              </div>
  
              <div class="form-group">
                <label>Confirme a senha</label>
                <input type="password" class="form-control" name="password-confirm" placeholder="Re-enter password">
              </div>
  
              <button type="submit" class="btn btn-primary btn-block">Cadastrar-se</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  